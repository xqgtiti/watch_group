<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/box_view_start_up"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_mod11"
    android:layout_height="match_parent"
    tools:context="com.example.xqg.weartest.activity.StartUpAcitivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_box="all">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="立即记录\n此时心情"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:textStyle="bold" />

        <android.support.wearable.view.CircledImageView
            android:id="@+id/card_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/ic_check_circle_white_48dp"
            android:clickable="true"
            app:circle_radius="33dp" />

        <android.support.wearable.view.CircledImageView
            android:id="@+id/card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/ic_highlight_off_white_48dp"
            app:circle_border_color="#FF0000"
            app:circle_radius="33dp" />

    </FrameLayout>

</android.support.wearable.view.BoxInsetLayout>
